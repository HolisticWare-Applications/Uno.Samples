<Page x:Class="SKCanvasElementShowcase.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Slider Grid.Row="0" x:Name="slider" Header="Slide the slider to see different samples" Minimum="0" Maximum="{x:Bind MaxSampleIndex}" />
            <Border Grid.Row="1" x:Name="border">
                <TextBlock Text="This sample is only supported on skia." />
            </Border>
        </Grid>
    </Grid>
</Page>
